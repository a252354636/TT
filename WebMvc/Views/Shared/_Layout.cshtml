<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>天安后台管理</title>
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div class="layui-layout layui-layout-admin">
        <div class="layui-header">
            <div class="layui-logo">天安后台管理</div>
            @Html.Partial("_LoginPartial")
        </div>
        <div class="layui-side layui-bg-black">
            <div class="layui-side-scroll">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <ul class="layui-nav layui-nav-tree" lay-filter="test">
                    <li class="layui-nav-item layui-nav-itemed">
                        <a class="" href="javascript:;">进件信息</a>
                        <dl class="layui-nav-child">
                            @{
                                var controller = ViewContext.RouteData.Values["controller"].ToString().ToLower();
                                var action = ViewContext.RouteData.Values["action"].ToString().ToLower();
                                if (controller == "order" && action == "index")
                                {
                                    <dd class="layui-this"><a href="/Order/Index">订单列表</a></dd>
                                }
                                else
                                {
                                    <dd><a href="/Order/Index">订单列表</a></dd>
                                }
                                if (controller == "setlementagent" && action == "index")
                                {
                                    <dd class="layui-this"><a href="/SetlementAgent/Index">代理人列表</a></dd>
                                }
                                else
                                {
                                    <dd><a href="/SetlementAgent/Index">代理人列表</a></dd>
                                }
                                if (controller == "merge" && action == "index")
                                {
                                    <dd class="layui-this"><a href="/Merge/Index">待支付列表</a></dd>
                                }
                                else
                                {
                                    <dd><a href="/Merge/Index">待支付列表</a></dd>
                                }
                                if (controller == "merge" && action == "succeed")
                                {
                                    <dd class="layui-this"><a href="/Merge/Succeed">支付完成列表</a></dd>
                                }
                                else
                                {
                                    <dd><a href="/Merge/Succeed">支付完成列表</a></dd>
                                }
                            }
                        </dl>
                    </li>

                </ul>
            </div>
        </div>
        <script src="~/Scripts/layui/layui.js"></script>
        <script>
            //JavaScript代码区域
            layui.use('element', function () {
                var element = layui.element;
            });
        </script>
        <div class="layui-body">
            @RenderBody()
        </div>

        <div class="layui-footer">

        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
